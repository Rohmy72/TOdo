{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/firestore-todo.schema.json",
  "title": "Firestore ToDo App Schema",
  "type": "object",
  "properties": {
    "users": {
      "type": "array",
      "description": "Collection of user documents",
      "items": {
        "type": "object",
        "title": "User Document",
        "properties": {
          "birthdate": {
            "type": "string",
            "format": "date-time",
            "description": "User's birthdate as a timestamp"
          },
          "created_time": {
            "type": "string",
            "format": "date-time",
            "description": "Time the user account was created"
          },
          "display_name": {
            "type": "string",
            "description": "Display name of the user"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "User's email address"
          },
          "photo_url": {
            "type": "string",
            "format": "uri",
            "description": "URL of the user's profile photo"
          },
          "uid": {
            "type": "string",
            "description": "Unique identifier for the user (Auth UID)"
          }
        },
        "required": ["created_time", "display_name", "email", "uid"]
      }
    }
